<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ExpenseTracker.ViewModels"
             mc:Ignorable="d" d:DesignWidth="412" d:DesignHeight="915"
             x:Class="ExpenseTracker.Views.MainView"
             x:DataType="vm:MainViewModel">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <DockPanel Background="{DynamicResource PrimaryForeground}">
        <Border Background="{DynamicResource PrimaryBackground}"
                Classes="header"
                Margin="0 0 0 15 "
                DockPanel.Dock="Top" Height="75">
            <Label Content="Expense Tracker"
                   Classes="h1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" FontSize="24"
                   Foreground="{DynamicResource PrimaryForeground}" />
        </Border>
        <Border Height="75"
                Background="{DynamicResource SecondaryBackground}"
                DockPanel.Dock="Bottom">
            <Grid
                ColumnDefinitions="*, Auto, *, Auto, *">
                <IconButton Grid.Column="1" Classes="subtle" IconText="&#xe2c2;" Content="Home"
                            Command="{Binding GoToHomeCommand}" />
                <IconButton Grid.Column="3" Classes="subtle" IconText="&#xe260;" Content="Reports"
                            Command="{Binding GoToReportsCommand}" />
            </Grid>
        </Border>
        <ContentControl Content="{Binding CurrentPage}" />
    </DockPanel>
</UserControl>