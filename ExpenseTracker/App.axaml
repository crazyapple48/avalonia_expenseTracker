<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ExpenseTracker"
             x:Class="ExpenseTracker.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Styles/AppDefaultStyles.axaml"></StyleInclude>
    </Application.Styles>
             
             <Application.Resources>
                 <SolidColorBrush x:Key="PrimaryForeground">#FAEEEB</SolidColorBrush>
                 <SolidColorBrush x:Key="PrimaryBackground">#823823</SolidColorBrush>
                 <SolidColorBrush x:Key="SecondaryBackground">#F0D0C7</SolidColorBrush>
                 <SolidColorBrush x:Key="TertiaryBackground">#E6B1A2</SolidColorBrush>
             </Application.Resources>
</Application>